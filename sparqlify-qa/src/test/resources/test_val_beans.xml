<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:c="http://www.springframework.org/schema/c"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config/>
  <context:component-scan base-package="org.aksw.sparqlify.qa" />
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
      p:location="classpath:environment.properties"
      p:ignoreResourceNotFound="true" 
      p:ignoreUnresolvablePlaceholders="true" />

  <bean
      id="rdbSink"
      class="org.h2.jdbcx.JdbcDataSource"
      p:URL="jdbc:h2:mem:test;MODE=PostgreSQL;DB_CLOSE_DELAY=-1"
      p:user="test"
      p:password="test" />

  <bean
      id="valueTestingSink"
      class="org.aksw.sparqlify.qa.sinks.ValueTestingSink" />
</beans>